<div class="p-3 mb-2 bg-light">
  <div class="container">
    <div class="w-25 d-flex align-items-center justify-content-center my-5 ml-5">
      <h2 class="font-weight-bold">投稿編集</h2>
    </div>

    <div class="row">
      <div class="col-sm-10 offset-md-2">

      <%= form_with(model: @post, url: admin_post_path(params[:id])) do |f|  %>
      <%= render 'layouts/error', obj: @post %>

      <div class="form-group row">
        <%= f.label :name, "ホテル名", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
          <%= f.text_field :hotel_name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :text, "本文", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
          <%= f.text_area :text, rows: 5,class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-2 col-form-label">
          <h6 class>投稿画像</h6>
        </div>
        <div class="post-image-box">
          <div class="d-flex justify-content-center flex-wrap mb-2">
            <% @post.post_images.each do |post_image| %>
　　　　      <%= attachment_image_tag post_image, :image, size: "250x250" %>
　　　　      <%= f.check_box :post_image_id, {multiple: true}, post_image.id, false %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-5">
          <%= f.attachment_field :post_images_images, multiple: true, class: "form-control-plaintext" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :name, "タグ (,で区切ると複数タグ登録可)", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
          <%= f.text_field :name, value: @tag_list, class:"form-control"%>
        </div>
      </div>

      <div class="row">
        <div class="col-3 text-left">
          <%= button_tag(type: "submit", class: "btn bgleft btn-sm shadow-sm ml-2") do %>
            <h6 span><i class="fas fa-book"></i>編集内容を保存</h6>
          <% end %>
        </div>

        <div class="col-3 text-right">
　　　    <%= link_to admin_post_path(params[:id]), method: :delete, class: "btn bgleft btn btn-danger",data: {confirm: "本当に削除しますか？" }  do %>
            <span><i class="fas fa-eraser"></i> 削除する</span>
          <% end %>
　　　  </div>
　　　</div>
      <% end %>
      </div>
    </div>
  </div>
</div>
 <% if users.present? %>
    <% users.each do |user| %>
      <div class="row mb-3">
        <div class="col offset-md-1">
          <i class="h5 fas fa-user-check"></i>ユーザー名:<%= link_to user.name, admin_user_path(user.id) %>
        </div>
        <div class="col">
          メールアドレス:<%= user.email %>
        </div>
        <div class="col">
          <%= user.created_at.strftime('%Y/%m/%d') %>登録
        </div>
        <% if user.is_deleted==true %>
          <td class="text-danger font-weight-bold">退会</td>
        <% else %>
          <td class="text-success font-weight-bold">有効</td>
        <% end %>

        <div class="col">
          <%= link_to "編集する", edit_admin_user_path(user.id), class:"btn btn-success py-0" %>
          <%= link_to "削除する", admin_user_path(user.id), class:"btn btn-danger py-0", method: :delete %>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="row mb-3">
      <div class="col offset-md-1">
        <h5>該当なし</h5>
      </div>
    </div>
  <% end %>
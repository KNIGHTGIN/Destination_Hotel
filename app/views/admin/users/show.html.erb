<div class="p-3 mb-2 bg-light">
  <div class="container">

    <div class="row my-3">
      <div class="col-lg-4 mt-3">
        <h2 class="font-weight-bold"><%= @user.name %>さんの詳細</h2>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-5">
        <table class="table table-bordered">
          <tr>
            <td class="font-weight-bold table-secondary">ユーザー名</td>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <td class="font-weight-bold table-secondary">投稿数</td>
            <td><%= @user.posts.count %>件</td>
          </tr>
          <tr>
            <td class="font-weight-bold table-secondary">いいね数</td>
            <td><%= @user.likes.count %>件</td>
          </tr>
          <tr>
            <td class="font-weight-bold table-secondary">コメント数</td>
            <td><%= @user.comments.count %>件</td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <% if @user.is_deleted == false %>
                <strong class="text-success">有効</strong>
              <% elsif @user.is_deleted == true %>
                <strong class="text-danger">退会</strong>
              <% end %>
            </td>
          </tr>
          <tr>
            <td>
              <%= link_to edit_admin_user_path(@user), class: "btn bgleft btn-sm shadow-sm ml-2" do %>
                <span><i class="fas fa-book"></i> 編集する</span>
              <% end %>
              <%= link_to admin_posts_path, class: "btn bgleft btn-sm shadow-sm ml-2" do %>
                <span><i class="fas fa-book-open"></i> 投稿一覧</span>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </div>


  </div>
</div>

<div class="container">

  <div class="row my-3 text-center">
    <div class="col-lg-4 mt-3">
      <h2><%= @user.name %>さんの詳細</h2>
    </div>
  </div>

  <table class="table table-bordered">
    <tr>
      <td class="table-secondary">ユーザー名</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td class="table-secondary">投稿数</td>
      <td><%= @user.posts.count %>件</td>
    </tr>
    <tr>
      <td class="table-secondary">いいね数</td>
      <td><%= @user.likes.count %>件</td>
    </tr>
    <tr>
      <td class="table-secondary">コメント数</td>
      <td><%= @user.comments.count %>件</td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td>
        <% if @user.is_deleted == false %>
          <strong class="text-success">有効</strong>
        <% elsif @user.is_deleted == true %>
          <strong class="text-danger">退会</strong>
        <% end %>
      </td>
    </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to edit_admin_user_path(@user), class: "btn bgleft mr-5" do %>
              <span>
                <i class="fas fa-cog"></i> 編集する
              </span>
            <% end %>
            <%= link_to admin_posts_path, class: "btn bgleft" do %>
              <span>
                <i class="far fa-eye"></i> 投稿一覧
              </span>
            <% end %>
          </td>
        </tr>

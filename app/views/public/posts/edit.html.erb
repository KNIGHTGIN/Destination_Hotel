<div class="container">
  <div class="w-25 d-flex align-items-center justify-content-center my-5 ml-5">
    <h2 class="font-weight-bold">投稿編集</span>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-md-2">

    <%= form_with model: @post do |f|  %>
    <%= render 'layouts/error', obj: @post %>

    <div class="form-group row">
      <%= f.label :name, "ホテル名", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.text_field :hotel_name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :text, "本文", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.text_area :text, rows: 5,class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :image, "画像（複数選択可）", class: "col-md-2 col-form-label" %>
      <div class="col-md-10">
      <%= f.file_field :post_images_images, class: "form-control-plaintext" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :name, "タグ (,で区切ると複数タグ登録できます)", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.text_field :name, value: @tag_list, class:"form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-5 offset-2">
        <%= button_tag(type: "submit", class: "btn bgleft btn-sm shadow-sm ml-2") do %>
          <span>
           <i class="fas fa-save"></i> 編集する
          </span>
        <% end %>
      </div>
    </div>

    <div class="row justify-content-center m-0">
　　　  <div class="col-lg-8">
　　　    <%= link_to post_path(@post.id), method: :delete, class: "col-md-3 btn btn-danger",data: {confirm: "本当に削除しますか？" }  do %>
            <span><i class="fas fa-cog"></i> 削除する</span>
          <% end %>
　　　  </div>
　　　</div>

<% end %>
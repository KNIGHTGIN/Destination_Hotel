<% if @post.present? %>

    <div class="row mb-3">
      <div class="col-8 p-0 mx-auto text-center">
        <div class="slideshow shadow">
          <div class="main-visual-content text-light">
            <h4>
            <%= link_to @post.hotel_name, post_path(@post.id) %>
            </h4>
          </div>
          <% if @post.post_images.present? %>
            <% @post.post_images.each do |img| %>
              <%= attachment_image_tag img, :image, size: "130x130" %>
            <% end %>
          <% else %>
            <%= image_tag "no_image.jpg", size: "130x130" %>
          <% end %>

          <% @post_tags.each do |tag| %>
  　　　　  　　　<%= link_to tag.name,search_tag_path(tag_id: tag.id)%><%="(#{tag.posts.count})" %>
　　　　　<% end %>

          <% @posts.each do |post| %>
            <i class="fas fa-tag"><%= post.tags.map(&:name).join(', ') %></i>
          <% end %>

        </div>
      </div>
    </div>


    <div class="row mb-3">
      <div class="col-2 mx-auto">
        <%= paginate @posts %>
      </div>
    </div>

    <h4>タグ一覧</h4>
          <% @tag_list.each do |list|%>
            <%=link_to list.name,search_tag_path(tag_id: list.id) %>
            <%="(#{list.posts.count})" %>
          <% end %>

  <% else %>
  <div class="row mb-3">
    <div class="col">
      <h5>投稿はありません</h5>
    </div>
  </div>

  <% end %>
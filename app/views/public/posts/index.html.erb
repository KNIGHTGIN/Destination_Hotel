<div class="col-md-10">
  <div class="container">
    <div class="row">
      <div class="col-12 d-flex justify-content-center mb-5">
        <h2>投稿一覧</h2>
        <p class="m-0 text-center pt-2">(全<%= @posts.count %>件)</p>
      </div>
    </div>

    <div class="row d-flex flex-wrap">
      <% @posts.each do |post| %>
        <div class="row mb-3 d-flex align-items-center">
          <div class="col-md-2 offset-md-1">
            <%= link_to post_path(post.id) do %>
              <% if post.post_images.first %>
                <%= attachment_image_tag post.post_images.first, :image, class:"img-thumbnail", size: "130x130" %>
              <% else %>
                <%= image_tag "no_image.jpg", size: "130x130" %>
              <% end %>
            <% end %>
          </div>
          <div class="col">
            <div class="row">
              <div class="col offset-md-1">
                ホテル名:<%= link_to post.hotel_name, post_path(post.id), class:"h4" %>
              </div>
              <div class="col offset-md-1">
                投稿者: <%= link_to post.user.name, user_path(post.user.id), class:"h4" %>
              </div>
            </div>
            <div class="row">
              <div class="col offset-md-1">
                <i class="fas fa-tag">タグ:<%= post.tags.map(&:name).join(', ') %></i>
                  | 投稿日: <%= post.updated_at.strftime('%Y/%m/%d') %>
                  | いいね: <%= post.likes.count %>件
                  | コメント: <%= post.comments.size %>件
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="row">
      <div class="col-12 d-flex justify-content-center">
        <%= paginate @posts %>
      </div>
    </div>


  <div class="col-md-10">
    <div class="container">
      <div class="row">
        <div class="col-12 d-flex justify-content-center mb-5">
          <h2>タグ一覧</h2>
        </div>
      </div>
      <div class="row d-flex flex-wrap">
        <% @tag_list.each do |list|%>
          <%=link_to list.name,search_tag_path(tag_id: list.id) %>
          <%="(#{list.posts.count})" %>
        <% end %>
      </div>
    </div>
  </div>

  <table class="table table-bordered">
    <tr>
      <%= link_to new_post_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
        <span><i class="fas fa-eye"></i> 新規投稿</span>
      <% end %>
    </tr>
  </table>
</div>

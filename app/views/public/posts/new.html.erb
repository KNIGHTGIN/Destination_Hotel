<div class="p-3 mb-2 bg-light">
  <div class="container">
    <div class="w-25 d-flex align-items-center justify-content-center my-5 ml-5">
      <h2 class="font-weight-bold">新規投稿</span>
    </div>

    <div class="row">
      <div class="col-sm-10 offset-md-2">

　　  <%= form_with model: @post do |f| %>
　　  <%= render 'layouts/error', obj: @post %>

      <div class="form-group row">
        <%= f.label :name, "ホテル名", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
        <%= f.text_field :hotel_name, autofocus: true, placeholder: "ホテル名", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :text, "本文", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
        <%= f.text_area :text,rows: 5, autofocus: true, placeholder: "本文", class: "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :image, "画像（複数投稿可）", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
        <%= f.attachment_field :post_images_images, multiple: true %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :name, "タグ (,で区切ると複数タグ登録可)", class: "col-md-4 col-form-label" %>
        <div class="col-md-5">
        <%= f.text_field :name,value: @tag_list, class:"form-control"%>
        </div>
      </div>

      <div class="form-group row" id="star">
        <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
        <%= f.hidden_field :star, id: :review_star %>
　　　</div>
      <script>
　　　  $('#star').empty();
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
            scoreName: 'post[star]',
          half: false,
        });
      </script>

      <div class="form-group row">
        <div class="col-3 text-right">
          <%= button_tag(type: "submit", class: "btn bgleft btn-secondary shadow-sm ml-2 btn-block") do %>
          <span><i class="fas fa-bookmark"></i>新規投稿</span>
          <% end %>
        </div>
      </div>

      <% end %>
      </div>
    </div>
  </div>
</div>
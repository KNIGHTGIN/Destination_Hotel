<div class="container">
  <div class="w-25 d-flex align-items-center justify-content-center my-5 ml-5">
    <h2 class="font-weight-bold">新規投稿</span>
  </div>

  <div class="row">
    <div class="col-sm-10 offset-md-2">

　　<%= form_with model: @post do |f| %>
　　<%= render 'layouts/error', obj: @post %>

    <div class="form-group row">
      <%= f.label :name, "ホテル名", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
      <%= f.text_field :hotel_name, autofocus: true, placeholder: "ホテル名", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :text, "本文", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
      <%= f.text_area :text, autofocus: true, placeholder: "本文", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label :image, "画像（複数投稿可）", class: "col-md-2 col-form-label" %>
      <div class="col-md-5">
      <%= f.attachment_field :post_images_images, multiple: true %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.label"タグ (,で区切ると複数タグ登録可)" %>
      <div class="col-md-5">
      <%= f.text_field :name,value: @tag_list,class:"form-control"%>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-5 offset-2">
        <%= button_tag(type: "submit", class: "btn bgleft btn-sm shadow-sm ml-2") do %>
        <span>新規投稿</span>
        <% end %>
      </div>
    </div>

    <% end %>
    </div>
  </div>
</div>
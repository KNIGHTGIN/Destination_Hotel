<div class="p-3 mb-2 bg-light">
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <h2 class="py-3 font-weight-bold">ユーザー登録</h2>

　　　<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  　　<%= render "public/shared/error_messages", resource: resource %>


        <div class="form-group row align-items-center">
          <label class="col-lg-2 col-form-label">ユーザー名</label>
          <div class="col-lg-5">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名",class: "form-control" %>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-lg-2 col-form-label">メールアドレス</label>
          <div class="col-lg-5">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control" %>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-lg-2 col-form-label">パスワード<br>(6文字以上)</label>
          <div class="col-lg-5">
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
          </div>
        </div>

        <div class="form-group row align-items-center">
          <label class="col-lg-2 col-form-label">パスワード<br>(確認用)</label>
          <div class="col-lg-5">
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-5 offset-lg-2">
            <%= button_tag(type: "submit", class: "btn bgleft btn-secondary shadow-sm ml-2 btn-block") do %>
              <span>
                <i class="fas fa-user-plus"></i>  新規登録-
              </span>
            <% end %>
          </div>
        </div>
      <% end %>

      <h2 class="py-3 mt-4 font-weight-bold">既に登録済みの方</h2>
      <p>
        <%= link_to new_user_session_path, class: "badge bg-secondary text-white shadow-sm" do %>
          <span>こちら</span>
        <% end %>
        からログインしてください。
      </p>
    </div>
  </div>
</div>
</div>
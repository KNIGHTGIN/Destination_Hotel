<div class="p-3 mb-2 bg-light">
<div class="container">

  <div class="row my-3">
    <div class="col-lg-4 mt-3">
      <h2 class="font-weight-bold">マイページ</h2>
    </div>
  </div>

  <div class ="row">

  <%= render "public/users/user_details" %>

    <div class = "col-md-5 offset-md-1">
      <div class = "row">
      <h4 class = "py-3 offset-md-1 font-weight-bold" >登録情報</h4>
        <tr>
          <%= link_to users_my_page_edit_path, class: "btn bgright btn-sm pl-3 pr-3 py-3" do %>
            <h5 span><i class="fas fa-cog"></i> 編集する</h5>
          <% end %>
      　</tr>
      </div>
      <table class="table table-bordered">
        <tr>
          <td class="font-weight-bold table-secondary">ユーザー名</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td class="font-weight-bold table-secondary">メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <table class="table table-bordered">
    <tr>
      <%= link_to new_post_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
        <h5 span><i class="fas fa-book-open"></i> 新規投稿</h5>
      <% end %>
    </tr>
  </table>

  <table class="table table-bordered">
    <tr>
      <%= link_to posts_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
        <h5 span><i class="fas fa-book-open"></i> 投稿一覧</h5>
      <% end %>
    </tr>
  </table>

</div>
</div>
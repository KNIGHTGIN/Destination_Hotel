<div class="container">

  <div class="row my-3 text-center">
    <div class="col-lg-4 mt-3">
      <h2>マイページ</h2>
    </div>
  </div>

  <%= render "public/users/user_details" %>

　<table class="table table-bordered">
      <tr>
        <td scope="col" style="width: 20%"><span class="font-weight-bold h6">登録情報</span></td>
        <td scope="col" style="width: 80%">
          <%= link_to users_my_page_edit_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
            <span><i class="fas fa-cog"></i> 編集する</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="table-secondary">ユーザー名</td>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <td class="table-secondary">メールアドレス</td>
        <td><%= current_user.email %></td>
      </tr>
  </table>

  <table class="table table-bordered">
    <tr>
      <%= link_to new_post_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
        <span><i class="fas fa-eye"></i> 新規投稿</span>
      <% end %>
    </tr>
  </table>

  <table class="table table-bordered">
    <tr>
      <%= link_to posts_path, class: "btn bgleft btn-sm pl-3 pr-3" do %>
        <span><i class="fas fa-eye"></i> 投稿一覧</span>
      <% end %>
    </tr>
  </table>

</div>
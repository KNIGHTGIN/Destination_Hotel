<h1>マイページ</h1>

<%= render "public/users/user_details" %>

　<div>
　  <h2>登録情報</h2>
　  <%= link_to "編集する", users_my_page_edit_path %>

　  <table>
　    <tr>
　      <td>ユーザー名</td>
　      <td><%= current_user.name %></td>
　    </tr>
　    <tr>
　      <td>メールアドレス</td>

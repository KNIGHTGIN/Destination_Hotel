<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "ユーザー名" %>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>ユーザー名:<%= user.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがUserではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>ホテル名:<%= post.hotel_name %></td>
          <td>本文:<%= post.text %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>
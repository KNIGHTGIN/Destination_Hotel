<div class="p-3 mb-2 bg-light">
<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h2><%= @user.name %>さんのFollow Users</h2>
      <table class='table table-bordereless'>
        <thead>
          <tr>
            <th>name</th>
            <th colspan='3'></th>
          </tr>
        </thead>
        <% @followers.each do |follow| %>
          <tbody>
            <tr>
              <td>
                <%= link_to follow.name, user_path(follow.id) %>
              </td>
              <td>
                <p>フォロー数：<%= link_to follow.followings.count, user_followings_path(follow.id) %></p>
              </td>
              <td>
                <p>フォロワー数：<%= link_to follow.followers.count, user_followers_path(follow.id) %></p>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>
</div>